# Universal properties
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Vue files
[*.vue]
indent_size = 2

# Blade templates
[*.blade.php]
indent_size = 4

# PHP files
[*.php]
indent_size = 4

# XML files
[*.xml]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Package manager files
[{package.json,package-lock.json,composer.json,composer.lock}]
indent_size = 2
